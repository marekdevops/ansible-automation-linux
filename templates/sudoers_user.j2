# Sudoers file for user: {{ sudoers_user }}
# Generated by Ansible on {{ ansible_date_time.iso8601 }}
# 
# This file allows {{ sudoers_user }} to execute specific commands without password
#

# User privilege specification
{% for command_line in sudoers_commands %}
{% if command_line.strip() and not command_line.strip().startswith('#') %}
{% set commands = command_line.split(';') %}
{% for command in commands %}
{% if command.strip() %}
{{ sudoers_user }} ALL=(ALL) NOPASSWD: {{ command.strip() }}
{% endif %}
{% endfor %}
{% endif %}
{% endfor %}